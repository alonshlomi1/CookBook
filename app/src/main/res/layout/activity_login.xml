<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.LoginActivity"
    android:background="@color/theme_2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp">


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/login_SIM_image"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_margin="12dp"
                android:src="@drawable/default_recipe_image"/>
            <LinearLayout
                android:id="@+id/login_LLO_login_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_SIM_image"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/segment_border"
                android:orientation="vertical"
                android:padding="12dp">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/login_TV_login_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/login"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_marginBottom="10dp"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text= "@string/email" />

                <EditText
                    android:id="@+id/login_ET_login_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:hint="@string/email" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/password" />

                <EditText
                    android:id="@+id/login_ET_login_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:hint="@string/password"
                    android:inputType="textPassword"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/login_BTN_signin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="22dp"
                    android:background="@drawable/button_background"
                    android:text="@string/SignIn"
                    app:backgroundTint="@null"
                    android:layout_gravity="center"
                    />

            </LinearLayout>


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/login_TV_signin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_LLO_login_form"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="22dp"
                android:text="@string/new_acount"
                android:textStyle="italic"

                />
            <LinearLayout
                android:id="@+id/login_LLO_signin_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_TV_signin"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/segment_border"
                android:orientation="vertical"
                android:padding="12dp">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/login_TV_signup_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/SignUp"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_marginBottom="10dp"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/firstname" />

                <EditText
                    android:id="@+id/login_ET_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:hint="@string/firstname" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lastname" />

                <EditText
                    android:id="@+id/login_ET_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:hint="@string/lastname" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email" />

                <EditText
                    android:id="@+id/login_ET_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:hint="@string/email" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/password" />

                <EditText
                    android:id="@+id/login_ET_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:hint="@string/password"
                    android:inputType="textPassword"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/password"
                    />

                <EditText
                    android:id="@+id/login_ET_password_again"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:hint="@string/password_again"
                    android:inputType="textPassword"/>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/login_BTN_signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/button_background"
                    android:text="@string/SignUp"
                    app:backgroundTint="@null" />
            </LinearLayout>




        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>